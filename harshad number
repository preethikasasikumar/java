import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner s = new Scanner(System.in);
		int num = 500;
		int temp = num;
		int sum = 0;
		while(num>0){
		    int rem = num % 10;
		    sum = sum + rem;
		    num = num / 10;
		}
		if(temp%sum==0){
		    System.out.println("Harshad number");
		}
		else{
		    System.out.println("Not a Harshad Number");
		}
		    
	}
}
